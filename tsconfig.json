{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "declaration": true,  // Genera archivos .d.ts para definiciones de tipos
    "declarationDir": "dist/types",  // Carpeta donde se guardan los tipos
    "outDir": "dist",  // Carpeta de salida para el c√≥digo compilado
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}